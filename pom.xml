    <groupId>de.skuzzle.tinyplugz</groupId>
    <artifactId>tiny-plugz</artifactId>
    <packaging>jar</packaging>
    <version>0.1.0-SNAPSHOT</version>
    <name>tiny-plugz</name>
    <description>
